{
  "name": "visual-sketch-sync",
  "displayName": "Visual Sketch Sync",
  "description": "Visual Sketch Sync - Three-way synchronization between drawing canvas, VS Code, and live Chrome application",
  "version": "0.1.0",
  "publisher": "kiro",
  "repository": {
    "type": "git",
    "url": "https://github.com/JODonogh/Visual-Sketch-Sync.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "design",
    "canvas",
    "drawing",
    "sync",
    "tablet",
    "stylus"
  ],
  "activationEvents": [
    "onCommand:vss.openDrawingCanvas",
    "onCommand:vss.startSyncServer",
    "onWebviewPanel:vss.drawingCanvas",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vss.openDrawingCanvas",
        "title": "Open Drawing Canvas",
        "category": "VSS"
      },
      {
        "command": "vss.startSyncServer",
        "title": "Start Sync Server",
        "category": "VSS"
      },
      {
        "command": "vss.stopSyncServer",
        "title": "Stop Sync Server",
        "category": "VSS"
      },
      {
        "command": "vss.exportDesign",
        "title": "Export Design",
        "category": "VSS"
      },
      {
        "command": "vss.startLiveServer",
        "title": "Start Live Server Integration",
        "category": "VSS"
      },
      {
        "command": "vss.debugChrome",
        "title": "Debug Chrome for VSS",
        "category": "VSS"
      },
      {
        "command": "vss.captureDOMTree",
        "title": "Capture DOM Tree from Chrome",
        "category": "VSS"
      },
      {
        "command": "vss.captureStylesheets",
        "title": "Capture Stylesheets from Chrome",
        "category": "VSS"
      },
      {
        "command": "vss.runIntegrationTests",
        "title": "Run Integration Tests",
        "category": "VSS"
      },
      {
        "command": "vss.runDiagnostics",
        "title": "Run System Diagnostics",
        "category": "VSS"
      },
      {
        "command": "vss.runRecovery",
        "title": "Run Recovery Tool",
        "category": "VSS"
      },
      {
        "command": "vss.clearCanvasHistory",
        "title": "Clear Canvas History",
        "category": "VSS"
      },
      {
        "command": "vss.exportErrorLogs",
        "title": "Export Error Logs",
        "category": "VSS"
      },
      {
        "command": "vss.chooseDisplayMethod",
        "title": "Choose Display Method",
        "category": "VSS"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "vss.drawingCanvas",
          "name": "VSS Drawing Canvas",
          "type": "webview",
          "when": "workspaceHasVSSProject"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "vss.panel",
          "title": "VSS Design",
          "icon": "$(paintcan)"
        }
      ]
    },
    "configuration": {
      "title": "Visual Sketch Sync",
      "properties": {
        "vss.canvas.width": {
          "type": "number",
          "default": 1920,
          "description": "Default canvas width"
        },
        "vss.canvas.height": {
          "type": "number",
          "default": 1080,
          "description": "Default canvas height"
        },
        "vss.tablet.pressureSensitivity": {
          "type": "boolean",
          "default": true,
          "description": "Enable pressure sensitivity for tablets and stylus"
        },
        "vss.sync.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start sync server when opening VSS project"
        },
        "vss.sync.port": {
          "type": "number",
          "default": 3001,
          "description": "Port for the sync server WebSocket connection"
        },
        "vss.liveServer.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start Live Server when opening VSS project"
        },
        "vss.chrome.debugPort": {
          "type": "number",
          "default": 9222,
          "description": "Port for Chrome remote debugging"
        },
        "vss.webview.enableSidebarFallback": {
          "type": "boolean",
          "default": true,
          "description": "Enable fallback to sidebar view if panel creation fails"
        },
        "vss.webview.showFallbackMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when fallback to sidebar view is used"
        },
        "vss.webview.preferredDisplayMethod": {
          "type": "string",
          "enum": ["panel", "sidebar"],
          "default": "panel",
          "description": "Preferred method for displaying the drawing canvas"
        }
      }
    }
  },
  "taskDefinitions": [
    {
      "type": "vss",
      "required": [
        "task"
      ],
      "properties": {
        "task": {
          "type": "string",
          "description": "The VSS task to execute"
        }
      }
    }
  ],
  "problemMatchers": [
    {
      "name": "vss-sync-server",
      "owner": "vss",
      "fileLocation": [
        "relative",
        "${workspaceFolder}"
      ],
      "pattern": {
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "severity": 4,
        "message": 5
      }
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "package:install": "vsce package && code --install-extension visual-sketch-sync-0.1.0.vsix",
    "diagnostics": "node scripts/vss-diagnostics.js",
    "test:diagnostics": "node scripts/vss-diagnostics.js --format json",
    "recovery": "node scripts/vss-recovery-tool.js",
    "recovery:auto": "node scripts/vss-recovery-tool.js --auto-fix",
    "health-check": "node scripts/vss-diagnostics.js && echo 'Run npm run recovery if issues found'",
    "validate-install": "node scripts/installation-validator.js",
    "test-manual-install": "node scripts/test-manual-install.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:integration": "npm run test",
    "test:unit": "mocha out/test/unit/**/*.test.js",
    "coverage": "nyc npm run test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@babel/parser": "^7.28.4",
    "chokidar": "^3.5.3",
    "recast": "^0.23.11",
    "ws": "^8.14.2"
  }
}
