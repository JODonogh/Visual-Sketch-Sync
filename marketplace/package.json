{
  "name": "visual-sketch-sync",
  "displayName": "Visual Sketch Sync",
  "description": "Revolutionary three-way sync between drawing canvas, VS Code, and live browser. Design visually, code efficiently.",
  "version": "1.0.0",
  "publisher": "visual-sketch-sync",
  "author": {
    "name": "VSS Team",
    "email": "team@vss.dev",
    "url": "https://vss.dev"
  },
  "license": "MIT",
  "homepage": "https://vss.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/vss/visual-sketch-sync.git"
  },
  "bugs": {
    "url": "https://github.com/vss/visual-sketch-sync/issues"
  },
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Debuggers",
    "Extension Packs"
  ],
  "keywords": [
    "design",
    "sync",
    "canvas",
    "drawing",
    "react",
    "css",
    "component",
    "visual",
    "tablet",
    "apple-pencil",
    "wacom",
    "design-system",
    "figma",
    "sketch",
    "devtools",
    "three-way-sync",
    "code-generation",
    "responsive",
    "mobile-first"
  ],
  "activationEvents": [
    "onCommand:vss.initializeProject",
    "onCommand:vss.openDrawingCanvas",
    "onCommand:vss.startSyncServer",
    "workspaceContains:**/design-data.json",
    "workspaceContains:**/vss-sync-server.js"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vss.initializeProject",
        "title": "Initialize Project",
        "category": "VSS"
      },
      {
        "command": "vss.openDrawingCanvas",
        "title": "Open Drawing Canvas",
        "category": "VSS",
        "icon": "$(paintcan)"
      },
      {
        "command": "vss.startSyncServer",
        "title": "Start Sync Server",
        "category": "VSS",
        "icon": "$(sync)"
      },
      {
        "command": "vss.stopSyncServer",
        "title": "Stop Sync Server",
        "category": "VSS",
        "icon": "$(debug-stop)"
      },
      {
        "command": "vss.restartSyncServer",
        "title": "Restart Sync Server",
        "category": "VSS",
        "icon": "$(refresh)"
      },
      {
        "command": "vss.exportDesign",
        "title": "Export Design",
        "category": "VSS",
        "icon": "$(export)"
      },
      {
        "command": "vss.generateComponents",
        "title": "Generate Components",
        "category": "VSS",
        "icon": "$(code)"
      },
      {
        "command": "vss.openDocumentation",
        "title": "Open Documentation",
        "category": "VSS",
        "icon": "$(book)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vss-explorer",
          "title": "Visual Sketch Sync",
          "icon": "$(paintcan)"
        }
      ]
    },
    "views": {
      "vss-explorer": [
        {
          "id": "vss-canvas",
          "name": "Drawing Canvas",
          "type": "webview",
          "when": "vss.canvasEnabled"
        },
        {
          "id": "vss-layers",
          "name": "Layers",
          "when": "vss.canvasEnabled"
        },
        {
          "id": "vss-components",
          "name": "Components",
          "when": "vss.projectInitialized"
        },
        {
          "id": "vss-sync-status",
          "name": "Sync Status",
          "when": "vss.syncServerRunning"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vss-canvas",
        "contents": "Welcome to Visual Sketch Sync!\n\n[Initialize Project](command:vss.initializeProject)\n\n[Open Documentation](command:vss.openDocumentation)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vss.initializeProject",
          "when": "!vss.projectInitialized"
        },
        {
          "command": "vss.openDrawingCanvas",
          "when": "vss.projectInitialized"
        },
        {
          "command": "vss.startSyncServer",
          "when": "vss.projectInitialized && !vss.syncServerRunning"
        },
        {
          "command": "vss.stopSyncServer",
          "when": "vss.syncServerRunning"
        },
        {
          "command": "vss.restartSyncServer",
          "when": "vss.projectInitialized"
        }
      ],
      "view/title": [
        {
          "command": "vss.openDrawingCanvas",
          "when": "view == vss-canvas",
          "group": "navigation"
        },
        {
          "command": "vss.exportDesign",
          "when": "view == vss-canvas && vss.hasDesignData",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "vss.generateComponents",
          "when": "resourceExtname == .json && resourceFilename =~ /design-data/",
          "group": "vss"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vss.openDrawingCanvas",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "vss.projectInitialized"
      },
      {
        "command": "vss.startSyncServer",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "vss.projectInitialized && !vss.syncServerRunning"
      }
    ],
    "configuration": {
      "title": "Visual Sketch Sync",
      "properties": {
        "vss.canvas.defaultSize": {
          "type": "object",
          "default": {
            "width": 1200,
            "height": 800
          },
          "description": "Default canvas size for new projects",
          "properties": {
            "width": {
              "type": "number",
              "minimum": 400
            },
            "height": {
              "type": "number",
              "minimum": 300
            }
          }
        },
        "vss.canvas.backgroundColor": {
          "type": "string",
          "default": "#ffffff",
          "description": "Default canvas background color"
        },
        "vss.canvas.gridSize": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 100,
          "description": "Grid size in pixels for alignment guides"
        },
        "vss.canvas.snapToGrid": {
          "type": "boolean",
          "default": true,
          "description": "Enable snap-to-grid for drawing tools"
        },
        "vss.sync.serverPort": {
          "type": "number",
          "default": 8080,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port for the sync server WebSocket connection"
        },
        "vss.sync.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start sync server when opening VSS project"
        },
        "vss.sync.reconnectAttempts": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 20,
          "description": "Number of reconnection attempts for WebSocket"
        },
        "vss.sync.debounceDelay": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 1000,
          "description": "Debounce delay in milliseconds for sync operations"
        },
        "vss.codeGeneration.framework": {
          "type": "string",
          "enum": [
            "react",
            "vue",
            "angular",
            "html"
          ],
          "default": "react",
          "description": "Target framework for component generation"
        },
        "vss.codeGeneration.cssFramework": {
          "type": "string",
          "enum": [
            "vanilla",
            "tailwind",
            "styled-components",
            "css-modules"
          ],
          "default": "vanilla",
          "description": "CSS framework for style generation"
        },
        "vss.codeGeneration.outputDirectory": {
          "type": "string",
          "default": "src/components",
          "description": "Directory for generated component files"
        },
        "vss.codeGeneration.fileNamingConvention": {
          "type": "string",
          "enum": [
            "camelCase",
            "kebab-case",
            "PascalCase"
          ],
          "default": "PascalCase",
          "description": "File naming convention for generated components"
        },
        "vss.tablet.enablePressureSensitivity": {
          "type": "boolean",
          "default": true,
          "description": "Enable pressure sensitivity for tablet input"
        },
        "vss.tablet.palmRejection": {
          "type": "boolean",
          "default": true,
          "description": "Enable palm rejection for tablet drawing"
        },
        "vss.performance.maxHistorySize": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum number of undo/redo operations to keep"
        },
        "vss.performance.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        },
        "vss.devtools.enableChromeIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Chrome DevTools integration for three-way sync"
        },
        "vss.devtools.enableReactDevTools": {
          "type": "boolean",
          "default": true,
          "description": "Enable React DevTools integration"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "vss-sync",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "The VSS sync command to run"
          },
          "port": {
            "type": "number",
            "description": "Port for sync server"
          }
        }
      }
    ],
    "debuggers": [
      {
        "type": "vss-chrome",
        "label": "VSS Chrome Debugger",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "url"
            ],
            "properties": {
              "url": {
                "type": "string",
                "description": "URL to launch Chrome with",
                "default": "http://localhost:3000"
              },
              "enableVSSSync": {
                "type": "boolean",
                "description": "Enable VSS three-way sync",
                "default": true
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "16.x",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5",
    "vsce": "^2.10.0"
  },
  "dependencies": {
    "ws": "^8.13.0",
    "chokidar": "^3.5.3",
    "recast": "^0.23.0",
    "@babel/parser": "^7.22.0",
    "@babel/types": "^7.22.0"
  },
  "extensionDependencies": [],
  "extensionPack": [],
  "icon": "assets/vds-icon.png",
  "galleryBanner": {
    "color": "#007bff",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/vss/visual-sketch-sync?style=social",
      "href": "https://github.com/vss/visual-sketch-sync",
      "description": "GitHub Stars"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/d/visual-sketch-sync.vss",
      "href": "https://marketplace.visualstudio.com/items?itemName=visual-sketch-sync.vss",
      "description": "Downloads"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/r/visual-sketch-sync.vss",
      "href": "https://marketplace.visualstudio.com/items?itemName=visual-sketch-sync.vss",
      "description": "Rating"
    }
  ],
  "preview": false,
  "qna": "https://github.com/vss/visual-sketch-sync/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/vss"
  }
}